# AUTOSTART
################################################################################
# Map CapsLock to Ctrl; Swap left Super and left Alt
exec setxkbmap -option ctrl:nocaps,altwin:swap_lalt_lwin

# Set natural scrolling
exec synclient VertScrollDelta=-114
exec synclient HorizScrollDelta=-114

# Start Network Manager
exec --no-startup-id nm-applet

# Disable touchpad when typing
exec syndaemon -i 0.5 -t -K -R -d

# Autolock screen
exec_always --no-startup-id xautolock -time 5  -locker "i3lock -c 272d2d && sleep 1" -detectsleep

# Decrease key delay. Alternatively this can be put under ~/.xinitrc.
exec xset r rate 200 0

# start ibus in order to run alacritty
exec --no-startup-id ibus-daemon

# start fcitx
exec --no-startup-id fcitx

# Start terminal in workspace 1.
exec --no-startup-id i3-msg 'workspace 1; exec alacritty'

# Start firefox in workspace 2.
exec --no-startup-id i3-msg 'workspace 2; exec firefox'

# Start slack in workspace 3.
exec --no-startup-id i3-msg 'workspace 3; exec slack'

# Start thunderbird in workspace 4.
exec --no-startup-id i3-msg 'workspace 4; exec thunderbird'

exec --no-startup-id xfce4-clipman &
bindsym $mod+Shift+v exec xfce4-popup-clipman

# Check Battery
exec --no-startup-id i3-battery-popup

# Start xcompmgr
# It fixes zoom annotation issue
exec --no-startup-id xcompmgr &

exec --no-startup-id flameshot &

